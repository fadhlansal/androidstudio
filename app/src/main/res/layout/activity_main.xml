<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/heading_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="@string/heading_main"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="@string/profile_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading_main" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="452dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8"
            android:layout_marginTop="8"
            android:layout_marginEnd="8"
            android:orientation="vertical">

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8"
                android:layout_marginBottom="8"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/title_text_main"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8"
                android:layout_marginBottom="8"
                android:text="@string/title_tautan"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/tautan_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8"
                android:text="@string/tautan_button" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8"
                android:layout_marginBottom="8"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/title_text_main2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8"
                android:layout_marginBottom="8"
                android:text="@string/title_tautan"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/tautan_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8"
                android:text="@string/tautan_button" />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8"
                android:layout_marginBottom="8"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/title_text_main3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8"
                android:layout_marginBottom="8"
                android:text="@string/title_tautan"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/tautan_button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8"
                android:text="@string/tautan_button" />

            <Button
                android:id="@+id/tautan_button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8"
                android:text="@string/tautan_button" />

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8"
                android:layout_marginBottom="8"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/title_text_main4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8"
                android:layout_marginBottom="8"
                android:text="@string/title_tautan"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
